<%= form_tag offerings_path, method: :get, class: "form-search" do %>
	<p>
  	<%= text_field_tag :search, @search, placeholder: "Search Offerings", class: "search" %>
  	<%= submit_tag :submit, class: "btn" %>
   </p>
<% end %>
<%= link_to "Display Offerings with no products", blank_offerings_path %>
<div class="pagination">
     <%= will_paginate @offerings, :container => false %>
</div>
<%= @offerings.total_entries %>
<table class="info">
	<tr>
	<td colspan="5"></td>
	<td colspan="7" style="margin:0;padding:0;text-align:center">Sales</td>
	</tr>
	<tr>
		<td style="margin:0;padding:0;text-align:center;width:91px">Modify</span></td>
		<td style="margin:0;padding:0;text-align:center;width:250px">Offering Name</td>
		<td style="margin:0;padding:0;text-align:center;width:90px">Price</td>
		<td style="margin:0;padding:0;text-align:center;width:75px">Weight (Lbs)</td>
		<td  style="margin:0;padding:0;text-align:center;width:150px">Included</td>
		<td style="margin:0;padding:0;text-align:center">AMZ US<br>
		<%= render "sort_buttons", name: "US", search: @search %>
		</td>
		<td style="margin:0;padding:0;text-align:center">AMZ CAD<br>
		<%= render "sort_buttons", name: "CA", search: @search %>
		</td>
		<td style="margin:0;padding:0;text-align:center">RBZ.COM<br>
		<%= render "sort_buttons", name: "WS", search: @search %>
		</td>
		<td style="margin:0;padding:0;text-align:center">Buy<br>
		<%= render "sort_buttons", name: "BC", search: @search %>
		</td>
		<td style="margin:0;padding:0;text-align:center">Ebay<br>
		<%= render "sort_buttons", name: "EB", search: @search %>
		</td>
		<td style="margin:0;padding:0;text-align:center">Phone<br>
		<%= render "sort_buttons", name: "PE", search: @search %>
		</td>
		<td style="margin:0;padding:0;text-align:center">All<br>
		<%= render "sort_buttons", name: "ALL", search: @search %>
		</td>
	</tr>
<% @offerings.each do |offer| %>
	<tr>
	<td><%= link_to 'Edit', edit_offering_path(offer) %> | <%= link_to "Delete", offer, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{offer.name}" %></td>
  <td><%= link_to offer.name, offering_path(offer) %></td>
  <td>
  <div id="price_<%= offer.id %>">
		<% if offer.price.blank? %>
			<%= form_for offer, remote: true do |f| %>
					<%= f.text_field :price, placeholder: "enter price", :class => "input-mini", style: "display:inline" %>
			<% end %>
		<% else %>
		  <%= offer.price %>
		<% end %>
  </div>
  </td>
  <td><%= offer.total_weight %></td>
	<td>
		<ul>
		<% for product in offer.products %>
			<% if OfferingProduct.find_by_product_id_and_offering_id(product,offer).quantity %>
				<% if OfferingProduct.find_by_product_id_and_offering_id(product,offer).quantity > 0 %>
					<li><%= pluralize(OfferingProduct.find_by_product_id_and_offering_id(product,offer).quantity, product.name) %></li>
				<% end %>
			<% end %>
		<% end %>
		</ul>
	</td>
	<td><%= offer.orders.amzus.count %></td>
	<td><%= offer.orders.amzca.count %></td>
	<td><%= offer.orders.website.count %></td>
	<td><%= offer.orders.buy.count %></td>
	<td><%= offer.orders.ebay.count %></td>
	<td><%= offer.orders.phone.count %></td>
	<td><%= offer.orders.count %></td>
	</tr>
<% end %>
</table>

