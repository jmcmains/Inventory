<tr>
	<td>
		<%= link_to 'Edit', edit_product_path(product) %> | <%= link_to "delete", product, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{product.name}" %>
	</td>
	<td>
		<%= link_to product.name, product_path(product) %>
	</td>
	<td>
		<%= product.description %>
	</td>
	<td class="number">
		<%= product.per_box %>
	</td>
	<td class="number">
		<%= product.need(leadTime).round %>
	</td>
	<td class="number">
	<% need=(product.need(leadTime)/product.per_box).ceil %>
	<% if need > 0 %>
		<%= (product.need(leadTime)/product.per_box).ceil %>
	<% else %>
		0
	<% end %>
	</td>
</tr>
