<tr>
	<td>
		<%= link_to 'Edit', edit_product_path(product) %> | <%= link_to "delete", product, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{product.name}" %>
	</td>
	<td>
		<%= link_to product.name, product_path(product) %>
	</td>
	<td>
		<%= product.description %>
	</td>
	<td>
		<%= pluralize(product.weight,"lb") if product.weight && product.weight >0 %>
	</td>
	<td class="number">
		<%= product.per_box %>
	</td>
	<td class="number">
		<%= product.get_Inventory.round %>
	</td>
	<td class="number">
		<%= product.get_orders.round %>
	</td>
	<td class="number">
		<%= product.need(60).round %>
	</td>
	<td class="number">
		<%= product.need(90).round %>
	</td>
	<td class="number">
		<%= product.need(120).round %>
	</td>
</tr>
