$(function() {
	$("#accordion").accordion({ active: false, collapsible: true, autoHeight: false, icons: { "header": "ui-icon-plus", "headerSelected": "ui-icon-minus" } });
	$("#accordion1").accordion({ active: false, collapsible: true, autoHeight: false, icons: { "header": "ui-icon-plus", "headerSelected": "ui-icon-minus" } });
});
