<% @customers.each do |customer| %>
<h2><%= customer.first_name %> <%= customer.last_name %></h2>
<%= link_to 'Edit', edit_customer_path(customer) %> | <%= link_to "Delete", customer, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{customer.first_name} #{customer.last_name}" %><br/>
<p>Address<br>
<%= raw customer.address %>
</p>
<p>E-mail<br>
<%= customer.email %></p>
<p>Total Cost<br>
<%= customer.total_cost %></p>
<p>Payment Method<br>
<%= customer.payment_method %></p>
<p>Transaction<br>
<%= link_to customer.transaction_number, "https://www.paypal.com/us/vst/id=#{customer.transaction_number}" %></p>
<p>Products Ordered<br>
<% customer.orders.each do |o| %>
	<%= pluralize o.quantity, o.offering.name %><br>
<% end %>
</p>

<%= link_to "send Order Confirmation email", send_email_customer_path(customer) %><br>

<% end %>
