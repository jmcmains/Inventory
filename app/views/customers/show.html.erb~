<p>Products Ordered<br>
<table class="table table-condensed">
<tr>
	<td>Product</td>
	<td>Quantity</td>
	<td>Cost(per)</td>
	<td>Cost(total)</td>
</tr>
<% total_price = 0 %>
<% @customer.orders.each do |o| %>
	<tr>
	<td><%= o.offering.name %></td>
	<td><%= o.quantity %></td>
	<td><%= number_to_currency(o.offering.price) %></td>
	<td><%= number_to_currency(o.offering.price*o.quantity) %></td>
	<% total_price += o.offering.price*o.quantity %>
	</tr>
<% end %>
	<tr>
	<td></td>
	<td></td>
	<td>Subtotal</td>
	<td><%= number_to_currency(total_price) %></td>
	</tr>
</table>
</p>

