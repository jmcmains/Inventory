<p class="fields form-inline">
<% a="o#{rand(1000)}" %>
  <%= f.text_field :offering_name, id: a, data: {autocomplete_source: autocomplete_offerings_path}, placeholder: "Product" %>
  <%= f.text_field :quantity, class: "input-small", placeholder: "Quantity" %>
  
  <%= link_to "nothing", price_offerings_path(a: "hello"), class: "link_#{a}" %>
  <span class="test_<%= a %>"></span>
  <%= link_to_remove_fields "-", f %>
</p>
<script>
$(function() {
	$('#<%= a %>').autocomplete({
		source: $('#<%= a %>').data('autocomplete-source')
	});
	$('#<%= a %>').bind( "autocompleteselect", function(event, ui) {
		$('.link_<%= a%>').click();
});
});
</script>
