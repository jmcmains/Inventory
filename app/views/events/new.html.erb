<%= form_for @event do |f| %>
	<div class="field">
		<%= f.label :event_type %><br />
		<%= f.radio_button :event_type, "Inventory", checked: true %>Inventory<br>
		<%= f.radio_button :event_type, "Product Order" %>Product Order<br>
	</div>
	
	<div class="field">
		<%= f.label :date %><br />
		<%= f.date_select :date %>
	</div>
	<div class="field">
		<%= f.label :invoice %><br />
		<%= f.text_field :invoice %>
	</div>
	<% n=1 %>
	<%= f.fields_for :product_counts do |pc| %>  
		<div class="field">
			<%= Product.all.first(n).last.name %><br>
			<%= Product.all.first(n).last.description %><br>
			<%= pc.hidden_field :product_id, value: Product.all.first(n).last.id %>
			<%= pc.text_field :count %><br>
			<%= pc.radio_button :is_box, "true", checked: true %> boxes
			<%= pc.radio_button :is_box, "false" %> pieces 
		</div> 
		<% n = n+1 %>
	<% end %> 
	<p><%= f.submit "Submit" %></p>
<% end %>
