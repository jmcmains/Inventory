  <%= f.date_select :date, { :order => [:month, :day, :year]}, {:class => "input-small"} %>
	<%= f.select :event_type, options_for_select(["Amazon US", "Amazon Canada"]) %>
  <%= f.submit "Load Data", class: "btn btn-primary" %>
<% end %>
	<div class="pagination">
		<%= will_paginate @events, :container => false %>
	</div>
<table class="table table-bordered table-striped table-condensed">
