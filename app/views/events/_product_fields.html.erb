<% if product.display? %>
<div class="product">
	<h3><%= product.name %></h3>
	<%= f.hidden_field :product_id, value: product.id %>
	<%= f.hidden_field :is_box, value: "false" %>
	<%= f.text_field :count, value: nil, 	class: "input-small", placeholder: "Count"  %>
  <%= f.radio_button :is_box, "true", checked: true %> boxes	<%= f.radio_button :is_box, "false" %> pieces
	<br>
	<table>
		<tr>
			<td>
				<% if product.imloc %>
					<%= image_tag product.imloc %>
				<% end %>
			</td>
			<td>
				<% if product.description %>
					<%= product.description %> - 
				<% end %>
				<%= "#{product.per_box} pc/box" %>
			</td>
		</tr>
	</table>
</div>
<% end %>
