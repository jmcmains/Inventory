<% @events.sort_by { |e| e.date}.each do |event| %>
	<p>
	<h2>Date: <%= event.date %> </h2>

	<%= link_to 'Edit', edit_event_path(event) %> | <%= link_to "Delete", event, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{event.event_type}" %><br/>
		<% if event.event_type == "Product Order" %>
			Expected Delivery (order date+60 days): <%= event.date + 60 %><br/>
			Invoice: <%= event.invoice %><br/>
			Suppier: <%= event.supplier %><br/>
		<% end %>
	Product Counts:<br>
	<ul>
	<% event.product_counts.each do |pc| %>
		<li><%= link_to pc.product.name, edit_product_path(pc.product) %>: <%= pc.count %> 
		<% if pc.is_box %>
			boxes
		<% else %>
			pieces
		<% end %>
		</li>
	<% end %>
	</ul>
	</p>
<% end %>


