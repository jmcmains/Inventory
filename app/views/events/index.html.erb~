	Date: <%= event.date %> <br/>
	<%= link_to 'Edit', edit_event_path(event) %> | <%= link_to "delete", event, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{event.event_type}" %><br/>
		<% if event.event_type == "Product Order" %>
			Invoice: <%= event.invoice %><br/>
		<% end %>
	Product Counts:<br>
	<ul>
	<% event.product_counts.each do |pc| %>
		<li><%= pc.product.name %>: <%= pc.count %> 
		<% if pc.is_box %>
			boxes
		<% else %>
			pieces
		<% end %>
		</li>
	<% end %>
	</ul>
<% end %>


