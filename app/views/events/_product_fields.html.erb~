<div style="width:300px;height:300px;float:left;margin:10px;border:1px solid #000;text-align:center;valign:middle; border-radius: 10px;">
<h3><%= product.name %></h3>
<%= f.label :product_description, product.description %>
<%= f.label :product_per_box, "#{product.per_box} pc/box" %>
<%= f.hidden_field :product_id, value: product.id %>
<% if event.product_counts.find_by_product_id(product) %>
	<%= f.text_field :count, value: event.product_counts.find_by_product_id(product).count %><br>
	<% if event.product_counts.find_by_product_id(product).is_box %>
		<%= f.radio_button :is_box, "true", checked: true %> boxes
		<%= f.radio_button :is_box, "false" %> pieces 
	<% else %>
		<%= f.radio_button :is_box, "true" %> boxes
		<%= f.radio_button :is_box, "false", checked: true %> pieces 
	<% end %>
<% else %>
	<%= f.text_field :count, value: "" %><br>
	<%= f.radio_button :is_box, "true", checked: true %> boxes
	<%= f.radio_button :is_box, "false" %> pieces 
<% end %>
<% if !product.imloc.blank? %>
	<br><%= image_tag product.imloc, style: "height:150px;max-height:100 px" %>
<% end %>
</div>
