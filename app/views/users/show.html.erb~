<td><%= link_to user.email, "mailto:#{user.email}" %></td>
<td><%= user.last_login ? user.last_login.utc.in_time_zone("Eastern Time (US & Canada)").strftime("%m/%d/%Y %l:%M %p") : "" %></td>
<td><%= link_to "Delete", user, :method => :delete, data: {confirm: "You sure?"}, :title => "Delete #{user.name}" %></td>
</tr>
<% end %>
</table>
