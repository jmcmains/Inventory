<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
<div class="container">
<% flash.each do |key, value| %>
	<%= content_tag(:div, value, class: "alert alert-#{key}") %>
<% end %>
<% if signed_in? %>
<div style="float:left;background-color: #eee;padding:10px;width:200px">
<ul>
			<li><%= link_to "Do an inventory count", new_inventory_events_path %></li>
			<li><%= link_to "See previous inventory counts", inventory_events_path %></li>

	<li id="fat-menu" class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Supplier Shipments<b class="caret"></b></a>
		<ul class="dropdown-menu">
			<li><%= link_to "Place an order from suppliers", new_po_events_path %></li>
			<li><%= link_to "See shipments in transit", po_events_path %></li>
			<li><%= link_to "See received shipments", po_received_events_path %></li>
		</ul>
	</li>
		<li id="fat-menu" class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Customer Orders <b class="caret"></b></a>
		<ul class="dropdown-menu">
			<li><%= link_to "Add Web Orders via csv", new_order_path %></li>
			<li><%= link_to "Add a Phone/Email Order", new_customer_path %></li>
			<li><%= link_to "View all Phone/Email Orders", customers_path %></li>
		</ul>
	</li>


	<li id="fat-menu" class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">View Product Line<b class="caret"></b></a>
		<ul class="dropdown-menu">
			<li><%= link_to "All Products", products_path %></li>
			<li class="divider"></li>
			<% Product.all.sort_by { |p| p.id }.each do |p| %>
				<li><%= link_to p.name, product_path(p) %></li>
			<% end %>
		</ul>
	</li>
	<li><%= link_to "All Product Offerings", offerings_path %></li>
</ul>
Open Paypal Receipt:
<%= form_tag paypal_path, target: "_blank" do %>
		<%= text_field_tag :Order_ID, nil,placeholder: "Order ID", class: "input-medium" %>
<% end %>
</div>
<div style="position:absolute;padding:10px;left:230px;right:0">
<%= yield %>
</div>
<% else %>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :password %>
			<%= f.password_field :password %><br>
			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
<% end %>
</body>
</html>
